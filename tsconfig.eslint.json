{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "traceResolution": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src",
    "*/.test.ts",
    "test/*/"
  ],
  "exclude": [
    "build/*/"
  ]
}
