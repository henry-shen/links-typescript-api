{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./src/types/strummer"
    ],
    "traceResolution": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "build/**/*",
    "**/*.test.ts",
    "test/**/*"
  ],
  "files": [
    "./src/types/index.d.ts"
  ]
}
